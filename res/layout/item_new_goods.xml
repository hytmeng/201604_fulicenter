<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:id="@+id/layout_good"
    android:weightSum="1"
    android:orientation="vertical">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_good_thumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_weight="0.42"
        android:src="@drawable/nopic" />

    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介商品简介"
        android:textSize="13sp"
        android:textColor="@color/item_good_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvGoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:text="$99"
        android:textColor="@color/item_good_price"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>