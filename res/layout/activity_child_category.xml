<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/good_detail_title_bg"
        >

        <include layout="@layout/common_head_back" />

        <cn.ucai.fulicenter.view.CatChildFilterButton
            android:id="@+id/btnCatFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow2_down"
            android:text="分类"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            />
        <cn.ucai.fulicenter.view.ColorFilterButton
            android:id="@+id/cfbColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#f09606"
            android:text="筛选"
            android:textSize="20dp"
            />

    </RelativeLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:orientation="horizontal"
     android:weightSum="2"
     android:background="#ff6500">
     <Button
         android:id="@+id/btnPriceSort"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableRight="@drawable/arrow_order_down"
         android:text="价格"
         android:layout_weight="1"
         android:background="@null"
         />
     <Button
         android:id="@+id/btnAddTimeSort"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableRight="@drawable/arrow_order_down"
         android:text="上架时间"
         android:layout_weight="1"
         android:background="@null"
         />
 </LinearLayout>
    <include layout="@layout/fragment_new_good" />
</LinearLayout>