<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:id="@+id/layout_category_group"
    android:background="@drawable/divid_explist_group">
<com.android.volley.toolbox.NetworkImageView
    android:id="@+id/niv_group_thumb"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/nopic"
    android:scaleType="centerCrop"
    android:layout_alignParentLeft="true"
    android:background="#00000000"
    android:layout_marginLeft="20dp"
    android:layout_centerVertical="true"
    />
    <ImageView
        android:id="@+id/iv_group_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/expand_on"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="group category"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/niv_group_thumb"
        android:layout_toLeftOf="@id/iv_group_select"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>